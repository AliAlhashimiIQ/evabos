{
  "name": "eva-pos-desktop",
  "version": "1.0.6",
  "productName": "EVA-POS",
  "description": "EVA POS Desktop Application",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "npm run build:electron && concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite --config renderer/vite.config.ts",
    "dev:electron": "wait-on http://localhost:5174 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build --config renderer/vite.config.ts",
    "build:electron": "tsc -p electron/tsconfig.json",
    "dist": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "dist:win": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win",
    "dist:portable": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win --config.win.target=portable",
    "pack": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --dir",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "keywords": [
    "pos",
    "electron",
    "react",
    "typescript"
  ],
  "author": "EVA Clothing",
  "license": "MIT",
  "build": {
    "appId": "com.eva.pos",
    "publish": [
      {
        "provider": "github",
        "owner": "AliAlhashimiIQ",
        "repo": "evabos"
      }
    ],
    "productName": "EVA POS",
    "directories": {
      "output": "dist-package",
      "buildResources": "build"
    },
    "files": [
      "dist-electron/**/*",
      "renderer/dist/**/*",
      "package.json",
      "legal/**/*"
    ],
    "extraFiles": [],
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-${version}-Setup.${ext}",
      "requestedExecutionLevel": "asInvoker",
      "forceCodeSigning": false,
      "signAndEditExecutable": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.${ext}",
      "requestExecutionLevel": "user"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "EVA POS",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "menuCategory": "Business"
    },
    "compression": "maximum",
    "asar": true,
    "asarUnpack": [
      "node_modules/sqlite3/**/*"
    ],
    "npmRebuild": false
  },
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jsbarcode": "^3.11.4",
    "bcrypt": "^6.0.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "jsbarcode": "^3.12.1",
    "nodemailer": "^7.0.11",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.28.0",
    "sqlite3": "^5.1.7",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^7.0.4",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/sqlite3": "^3.1.11",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "playwright": "^1.56.1",
    "sharp": "^0.33.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^4.0.13",
    "wait-on": "^7.2.0"
  }
}